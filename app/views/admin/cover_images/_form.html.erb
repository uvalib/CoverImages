<div class="row">
  <div class="col-sm-6">
    <%= f.input :doc_id, label: "Doc ID", hint: "From Solr", required: true %>
    <%= f.input :doc_type, collection: CoverImage::TYPES.keys, include_blank: false %>
    <%= f.input :title %>
    <p>
    <% if f.object.image.present? %>
      <%= image_tag f.object.image.url(:thumb), class: 'img-responsive' %>
    <%end%>
    </p>
  </div>
  <div class="col-sm-6">
    <%= f.input :image, hint: "leave blank to automatically search" %>
    <%= f.input :locked, label: "&nbsp;&nbsp;Locked Image?", as: :boolean,
      input_html: {data: {toggle: 'toggle'}},
      wrapper_html: {data: {toggle: 'tooltip',
                            placement: "bottom"},
                     title: "Manually adding an image above will lock it in place and remove the ability to reprocess.",
    }
    %>
    <%= f.input :isbn %>
    <%= f.input :oclc %>
    <%= f.input :lccn %>
    <%= f.input :upc %>
    <%= f.input :mbid %>
    <%= f.input :artist_name %>
    <%= f.input :album_name %>
  </div>
</div>
